{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error"
  },
  "overrides": [
    {
      "files": [
        "**/*.test.{js,jsx,ts,tsx}",
        "**/*.spec.{js,jsx,ts,tsx}",
        "**/__tests__/**/*.{js,jsx,ts,tsx}"
      ],
      "plugins": ["vitest"],
      "env": {
        "vitest/env": true
      },
      "rules": {
        "vitest/no-focused-tests": "error",
        "vitest/no-identical-title": "error",
        "vitest/expect-expect": "warn"
      }
    }
  ]
}
